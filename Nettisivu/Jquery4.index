        <a href="Jquery2.index">Valkoviinit</a>
        <a href="Jquery3.index">Kuplivat</a>
    </div>

    <input type="text" id="searchBox" placeholder="Etsi sivulta..." oninput="highlightText()">

    <script>
        function highlightText() {
            let search = document.getElementById("searchBox").value.toLowerCase();
            removeHighlights();
            if (!search) return;
            
            let body = document.body;
            let walker = document.createTreeWalker(body, NodeFilter.SHOW_TEXT, null, false);
            let nodes = [];

            while (walker.nextNode()) {
                nodes.push(walker.currentNode);
            }

            nodes.forEach(node => {
                let parent = node.parentNode;
                if (parent.tagName !== "SCRIPT" && parent.tagName !== "STYLE") { 
                    let text = node.nodeValue;
                    let index = text.toLowerCase().indexOf(search);

                    if (index !== -1) {
                        let before = document.createTextNode(text.substring(0, index));
                        let match = document.createElement("mark");
                        match.textContent = text.substring(index, index + search.length);
                        let after = document.createTextNode(text.substring(index + search.length));

                        parent.replaceChild(after, node);
                        parent.insertBefore(match, after);
                        parent.insertBefore(before, match);
                    }
                }
            });
        }

        function removeHighlights() {
            document.querySelectorAll("mark").forEach(mark => {
                mark.replaceWith(mark.textContent);
            });
        }
    </script>

    <!-- Keskitetty sähköpostilomake -->
